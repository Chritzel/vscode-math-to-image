{
  "name": "vscode-math-to-image",
  "displayName": "Math to Image",
  "description": "üìê Render LaTeX math equations in any Markdown file",
  "license": "MIT",
  "version": "0.0.1",
  "publisher": "MeowTeam",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "assets/vscode-math-to-image.png",
  "galleryBanner": {
    "color": "#2b3838",
    "theme": "dark"
  },
  "homepage": "https://github.com/TeamMeow/vscode-math-to-image",
  "bugs": {
    "url": "https://github.com/TeamMeow/vscode-math-to-image/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TeamMeow/vscode-math-to-image"
  },
  "activationEvents": [
    "onCommand:vscode-math-to-image.render-selection",
    "onCommand:vscode-math-to-image.render-selection-local"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-math-to-image.render-selection",
        "title": "Math ¬ª Image: Insert rendered equation (remote)"
      },
      {
        "command": "vscode-math-to-image.render-selection-local",
        "title": "Math ¬ª Image: Insert rendered equation (local)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vscode-math-to-image.render-selection",
          "when": "resourceLangId == markdown && editorFocus && editorHasSelection",
          "group": "modification"
        },
        {
          "command": "vscode-math-to-image.render-selection-local",
          "when": "resourceLangId == markdown && editorFocus && editorHasSelection",
          "group": "modification"
        }
      ]
    },
    "configuration": {
      "title": "vscode-math-to-image",
      "properties": {
        "vscode-math-to-image.svgSavePath": {
          "type": "string",
          "default": "workspace folder",
          "enum": [
            ".",
            "workspace folder"
          ],
          "enumDescriptions": [
            "Generated SVG files will be put in a folder which is in current file's folder",
            "Generated SVG files will be put in a folder which is in current workspace folder"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.47.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vsce": "^1.77.0",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "mathjax-node": "^2.1.1"
  }
}
